.platform-intro {
	padding-top: 220px;
	padding-bottom: @padding-top;
	background: #3a4d53 url("img/platform/platform-intro-bg.svg") 50% 50% no-repeat;
	color: #fff;
	text-align: center;

	@media (--lap) {
