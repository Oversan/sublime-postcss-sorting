.platform-organize {
	@custom-media --platform-organize--lap (768px <= width <= 960px);

	background-image: linear-gradient(-45deg, #ff83b2 0%, #da82d8 49%, #b480ff 100%);

	&__row {
		display: flex;
		flex-direction: row;
		flex-wrap: nowrap;
		align-items: center;
		justify-content: flex-start;

		@media (--platform-organize--lap) {
			display: block;
			margin-bottom: 40px;
			text-align: center;
		}
		@media (--palm) {
			display: block;
			margin-bottom: 17px;
		}

		&:nth-child(2) {
			flex-direction: row-reverse;
		}
		&:nth-child(3) {
			margin-bottom: 50px;

			@media (--palm) {
				display: none;
			}
		}
	}
	&__text {
		flex: 1 1 auto;
		padding-bottom: 54px; /* vertical alignment because of screenshots switcher */

		@media (--platform-organize--lap) {
			lost-center: 90%;
			padding-bottom: 30px;
		}
	}
		&__row:nth-child(2) &__text {
			padding-right: 40px;
			padding-left: 60px;

			@media (--lap) {
				padding-right: 0;
			}
			@media (--platform-organize--lap) {
				padding-right: 0;
				padding-left: 0;
			}
			@media (--palm) {
				margin-bottom: 15px;
				padding: 0;
			}
		}
		&__row:nth-child(3) &__text {
			padding-right: 80px;

			@media (--platform-organize--lap) {
				padding-right: 0;
			}
		}
	&__media {
		flex: 0 0 auto;
	}
}
.platform-navigation {
	@media (--palm) {
		lost-utility: clearfix;
	}

	&__item {
		position: relative;
		display: inline-block;
		width: 27%;
		vertical-align: middle;

		@media (--not-palm) {
			&:not(:first-child) {
				margin-left: -40px;
			}
			&:nth-child(1) {
				z-index: 3;
				text-indent: -15px;
			}
			&:nth-child(2) {
				z-index: 2;
			}
			&:nth-child(3) {
				z-index: 1;
			}
			&:nth-child(4) {
				text-indent: 15px;
			}
		}
		@media (--lap) {
			width: auto;
		}
		@media (--palm) {
			lost-column: 1/2 2 5px;
			display: block;

			&:nth-child(-n+2) {
				margin-bottom: 30px;
			}
		}
	}
	&__link {
		display: block;
		height: 80px;
		background-position: 100% 0;
		background-repeat: no-repeat;
		color: #fff;
		font-size: 22px;
		line-height: 80px;

		@media (--lap) {
			padding: 0 50px;
		}
		@media (--not-palm) {
			&:hover {
				color: #fff;
				line-height: 76px;
			}
			&--organize {
				background-image: inline("img/platform/platform-navigation__link--organize.svg");
			}
			&--communicate {
				background-image: inline("img/platform/platform-navigation__link--communicate.svg");
			}
			&--socialize {
				background-image: inline("img/platform/platform-navigation__link--socialize.svg");
			}
			&--analyze {
				background: #52edc7;
			}
		}
		@media (--palm) {
			position: relative;
			padding-left: 40px;
			height: auto;
			text-align: left;
			font-size: 16px;
			line-height: 20px;

			&--organize {
				color: #ff83b2 !important;
			}
			&--communicate {
				color: #4ac0ee !important;
			}
			&--socialize {
				color: #fca203 !important;
			}
			&--analyze {
				color: #52edc7 !important;
			}
		}
	}
	&__item:first-child &__link {
		border-radius: 5px 0 0 5px;
	}
	&__item:last-child &__link {
		border-radius: 0 5px 5px 0;
	}
	&__icon {
		position: relative;
		top: -2px;
		margin-right: 15px;
		vertical-align: middle;
		fill: currentColor;

		@media (--lap) {
			display: none;
		}
		@media (--palm) {
			position: absolute;
			top: 50%;
			left: 0;
			transform: translate(0, -50%);
		}
	}
}
.platform-organize-media {
	&__items {
		margin-bottom: 24px;

		@media (--palm) {
			margin-bottom: 0;
		}
	}
	&__item {
	}
	&__image {
		border-radius: 5px;
