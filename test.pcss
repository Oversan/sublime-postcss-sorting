		}
	}
}
.platform-communicate-process {
	@custom-media --platform-communicate-process--lap (768px <= width < 900px);
	@custom-media --platform-communicate-process--desk (width >= 900px);

	position: relative;
	margin: auto;
	counter-reset: steps;

	@media (--platform-communicate-process--desk) {
		width: calc(220px * 2 + 404px);
		height: calc(144px + 404px + 140px);
		background: url("img/platform/communicate-circle.png") 50% 144px no-repeat;
		background-size: 404px 403px;
	}

	&__step {
		position: relative;

		@media (--platform-communicate-process--desk) {
			&:nth-child(n+2) {
				box-sizing: content-box;
				max-width: 230px;
			}
			&:nth-child(1) {
				top: 0;
				left: 0;
				padding-bottom: 50px;
				width: 100%;
				text-align: center;

				&:before {
					bottom: 0;
					left: 50%;
					margin-left: -17px;
				}
			}
			&:nth-child(2),
			&:nth-child(3) {
				left: 580px;
				padding-left: 50px;

				&:before {
					top: 0;
					left: 0;
				}
			}
			&:nth-child(4) {
				top: 528px;
				left: 304px;
				padding-top: 50px;
				text-align: center;

				&:before {
					top: 0;
					left: 50%;
					margin-left: -17px;
				}
			}
			&:nth-child(5),
			&:nth-child(6) {
				right: 580px;
				padding-right: 50px;
				text-align: right;

				&:before {
					top: 0;
					right: 0;
				}
			}
			&:nth-child(2),
			&:nth-child(6) {
				top: 230px;
			}
			&:nth-child(3),
			&:nth-child(5) {
				top: 424px;
			}
		}
		@media (--platform-communicate-process--desk) {
			position: absolute;
		}
		@media (--platform-communicate-process--lap) {
			position: relative;
			padding-top: 3px;
			padding-left: 50px;

			&:not(:last-child) {
				margin-bottom: 20px;
			}
		}
		@media (--palm) {
			position: relative;
			padding-top: 7px;
			padding-left: 50px;
			height: 50px;

			&:last-child {
				height: 34px;
			}
		}

		&:before {
			position: absolute;
			display: block;
			width: 34px;
			height: @width;
			border: 1px solid #fff;
			border-radius: 50%;
			content: counter(steps, decimal);
			counter-increment: steps;
			text-align: center;
			font-weight: normal;
			line-height: 32px;

			@media (--platform-communicate-process--lap) {
				top: 0;
				left: 0;
			}
			@media (--palm) {
				top: 0;
				left: 0;
			}
		}
	}
	&__image-wrapper {
		@media (--palm) {
			margin-top: -15px;
		}
	}
		&__step:not(:first-child) &__image-wrapper {
			@media (--palm) {
				display: none;
			}
		}
	&__image {
		max-width: 100%;

		@media (--palm) {
			max-height: 56px;
		}
	}
	&__title {
		margin-bottom: 10px;
		font-weight: bold;
		font-size: 20px;
		line-height: 25px;

		@media (--palm) {
			margin-bottom: 0;
			font-weight: normal;
			font-size: 14px;
			line-height: 18px;
		}
	}
}
.platform-socialize {
	background-image: linear-gradient(135deg, #fe488b, #fca203);

	&__intro {
		margin-bottom: 47px;
		text-align: center;

		@media (--palm) {
			margin-bottom: 18px;
			text-align: left;
		}
	}
	&__description {
		@media (--desk) {
			lost-center: 70%;
		}
		@media (--lap) {
			lost-center: 90%;
		}
	}
}
.platform-socialize-types {
	lost-flex-container: row;
	align-items: stretch;

	&__list {
		@media (--desk) {
			lost-column: 5/12 flex;
			lost-offset: -1/12;
			padding-right: 30px;
		}
		@media (--lap) {
			lost-column: 1/2 flex;
		}
		@media (--palm) {
			display: none;
		}
	}
	&__item {
		margin-bottom: 2px;
		padding: 20px 30px;
		cursor: pointer;

		&.is-current {
			border-radius: 5px 0 0 5px;
			background: inline("img/socialize-types-item-bg.svg") 100% 0 no-repeat;
			background-size: auto 100%;
		}

		@media (--palm) {
			padding: 0;
			background: none !important;

			&:not(:last-child) {
				margin-bottom: 17px;
			}
		}
	}
	&__title {
		margin-bottom: 3px;
	}
	&__description {
		opacity: .7;
	}
	&__images {
		position: relative;

		@media (--desk) {
			lost-column: 5/12 flex;
		}
		@media (--lap) {
			lost-column: 1/2 flex;
			text-align: center;
		}
		@media (--palm) {
			lost-column: 2 flex;
			text-align: center;
			margin: 0 auto;
			height: 300px;
			width: 300px;
			margin: 0 auto !important;
		}
	}
	&__image-wrapper {
		position: absolute;
		top: 50%;
		left: 0;
		display: block;
		max-width: 100%;
		max-height: 100%;
		opacity: 1;
		transition: opacity .2s;
		transform: translateY(-50%);

		&.is-visible ~ & {
			opacity: 0;
		}
		@media (--palm) {
			opacity: 1 !important;
		}
	}
	&__image {
		max-width: 100%;
	}
}
.platform-analyze {
	background-image: linear-gradient(225deg, #52edc7, #4ac0ee);

	&__content {
		@media (--not-palm) {
			lost-flex-container: row;
			align-items: center;
		}
	}
	&__text {
		@media (--not-palm) {
			lost-column: 5/12 flex;
			lost-move: 6/12;
			padding-left: 30px;
		}
		@media (--lap) {
			lost-column: 6/12 flex;
			padding-left: 0;
		}
		@media (--palm) {
			margin-bottom: 25px;
		}
	}
	&__image-wrapper {
		@media (--not-palm) {
			lost-column: 6/12 flex;
			lost-move: -5/12;
			padding-right: 30px;
			text-align: right;
		}
		@media (--lap) {
			lost-move: -6/12;
		}
	}
	&__image {
		max-width: 100%;
		border-radius: 5px;
		box-shadow: 0 0 13px rgba(0, 0, 0, .12);
	}
}
.platform-features {
	@custom-media --platform-features-desk (width >= 1100px);
	@custom-media --platform-features-lap (768px <= width <= 1100px);
	@custom-media --platform-features-lap2 (768px <= width <= 820px);

	lost-utility: clearfix;

	&__nav {
		position: sticky;
		top: 100px;

		@media (--platform-features-desk) {
			lost-column: 3/12;
		}
		@media (--platform-features-lap) {
			lost-column: 4/12;
		}
		@media (--platform-features-lap2) {
			lost-column: 5/12;
		}
	}
	&__container {
		@media (--platform-features-desk) {
			lost-column: 9/12;
		}
		@media (--platform-features-lap) {
			lost-column: 8/12;
		}
		@media (--platform-features-lap2) {
			lost-column: 7/12;
		}
	}
	&__section {
		margin-bottom: calc(50px - 27px);

		&:first-child {
			padding-top: 15px;
		}
	}
	&__section-title {
		margin-bottom: 22px;
		color: #4ac0ee;
		text-transform: uppercase;
		letter-spacing: 2px;
		font-size: 14px;
	}
	&__section-icon {
		position: relative;
		top: -2px;
		margin-right: 6px;
		vertical-align: middle;

		@media (--palm) {
			display: none;
		}
	}
	&__list {
		lost-utility: clearfix;

		@media (--palm) {
			margin-top: 18px;
		}
	}
	&__item {
		margin-bottom: 27px;

		@media (--platform-features-desk) {
			lost-column: 1/3;
		}
		@media (--platform-features-lap) {
			lost-column: 1/2;
		}
		@media (--palm) {
			margin-bottom: 19px;

			@mixin last;
		}
	}
	&__feature-title {
		margin-bottom: 7px;

		@media (--palm) {
			margin-bottom: 3px;
			color: $default-color;
		}
	}
	&__feature-description {
		color: #7f8c8d;
		font-size: 14px;
		line-height: 18px;
	}
}

.early-access-button {
	display: none;
	margin-bottom: 30px;
	&.mobile {
		@media (--palm) {
			display: block;
		}
	}
}
